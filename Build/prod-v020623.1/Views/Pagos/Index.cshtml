@model SAC.Models.PagosFacturasModelView

@{
    ViewBag.Title = "Pagos de Compras";
}

<div class="row">
    <div class="col-xlg-12 col-lg-12 col-md-12">
        <div class="card">
            <div class="card-body">
                <label>Pago Facturas de Compras</label>

                @using (Html.BeginForm("Index", "Pagos", FormMethod.Post, new { @id = "frmBusqueda" }))
                {
                    <div class="row col-md-12 m-t-10">

                        <div class="col-md-1  text-right">
                            @Html.Label("Proveedores", new { @class = "control-label form-control-sm" })
                        </div>
                        <div class="col-md-3 text-left">
                            @Html.DropDownList("ProveedorSelec_", Model.ListaProveedores_, null, new { @class = "form-control form-control-sm" })
                        </div>

                        <div class="col-md-1 text-right">@Html.Label("Moneda", new { @class = "control-label form-control-sm" })</div>
                        <div class="col-md-2 text-left"> @Html.DropDownList("idTipoMonedaSelec_", Model.ListaTipoMonedas_, null, new { @class = "form-control form-control-sm" })</div>
                    <div class="col-md-1 text-left">
                        <button type="submit" value="Buscar" class="btn btn-secondary btn-sm">Buscar</button>
                    </div>

                    </div>
                }

                <br />
                @if (Model.ListaFacturasAPagar_ != null)
                {
                    <div class="row col-md-12 m-t-10">
                        <div class="col-md-6">

                            <h5>Cuenta Corriente</h5>
                            @{
                                decimal saldoCtaCte = 0;
                            }

                            <div class="table-responsive">
                                <div id="divPaginaFacturasPagar" style="height:200px">

                                    @using (Ajax.BeginForm("AgregarFacturaPagar", "Pagos", null, new AjaxOptions
                                    {
                                        HttpMethod = "POST",
                                        UpdateTargetId = "divPagina1",
                                        InsertionMode = InsertionMode.Replace
                                    }, new { @id = "frmCargarFactura" }))
                                    {

                                        <table id="TblFacturasAPagar" class="table stylish-table">
                                            <thead>
                                                <tr>

                                                    <td class="text-center">Nro. Factura</td>
                                                    <td class="text-center">Cbte</td>
                                                    <td class="text-center">Fecha</td>
                                                    <td class="text-center">Total $</td>
                                                    <td class="text-center">Total U$S</td>
                                                    <td class="text-center">Parcial</td>
                                                    <td class="text-center">Saldo</td>
                                                    <td class="text-center">Cotizacion</td>
                                                </tr>
                                            </thead>
                                            <tbody>



                                                @foreach (var item in Model.ListaFacturasAPagar_)
                                                {

                                                    var claseSele = "";
                                                    if (item.TipoComprobante.Id == 98)
                                                    {
                                                        claseSele = "table-success";
                                                    }
                                                    else
                                                    {
                                                        claseSele = "table-default";
                                                    }
                                                    <tr ondblclick="Pagar(@item.Id, @item.Saldo, @item.NumeroFactura, @item.IdTipoComprobante,@item.Cotizacion,@item.IdMoneda )" class="Seleccionable @claseSele">

                                                        @Html.Hidden("idFacturaSeleccionada")
                                                        @Html.Hidden("idModoPago")
                                                        @Html.Hidden("MontoPago")
                                                        @Html.Hidden("CotizacionActual")

                                                        @*<td class="text-center">@Html.DisplayFor(modelItem => item.ProveedorCodigo)</td>*@
                                                        <td>@Html.DisplayFor(modelItem => item.NumeroFactura)</td>
                                                        <td class="text-right">@Html.DisplayFor(modelItem => item.TipoComprobante.Abreviatura)</td>
                                                        <td class="text-right">@Html.DisplayFor(modelItem => item.Fecha)</td>
                                                        <td class="text-right">
                                                            @{
                                                                if (item.IdMoneda == 1)
                                                                {
                                                                    <text>
                                                                        @item.Total
                                                                    </text>
                                                                }
                                                                else
                                                                {
                                                                    <text>
                                                                        0
                                                                    </text>
                                                                }

                                                            }
                                                        </td>
                                                        <td class="text-right">
                                                            @{
                                                                if (item.IdMoneda == 2)
                                                                {
                                                                    <text>
                                                                        @item.Total
                                                                    </text>
                                                                }
                                                                else
                                                                {
                                                                    <text>
                                                                        0
                                                                    </text>
                                                                }

                                                            }


                                                        </td>
                                                        <td class="text-right">@Html.DisplayFor(modelItem => item.Parcial)</td>
                                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Saldo)</td>
                                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Cotizacion)</td>
                                                    </tr>
                                                    saldoCtaCte += item.Saldo;
                                                }
                                            </tbody>
                                            <tfoot>

                                            </tfoot>
                                        </table>
                                    }
                                </div>
                            </div>


                            <div class="row justify-content-md-center">
                                <div class="col-md-4 text-right">
                                    <small>Saldo de Cta. Cte. </small>
                                </div>

                                <div class="col-md-6 text-left">
                                    <small id="sldocta" class="font-weight-bold"> @saldoCtaCte</small>
                                </div>

                            </div>


                        </div>
                        @* aca van las facturas a pagar *@
                        <div class="col-md-6">
                            <h5>Resumen de Pago</h5>
                            <div class="table-responsive">
                                <div id="divPagina1" style="height:200px">
                                    @Html.Partial("_TablaFacturasPagar", Model)
                                </div>

                            </div>
                        </div>
                    </div>
                }


                @if (Model.ListaFacturasAPagar_ != null)
                {



                    using (Ajax.BeginForm("AgregarPago", "Pagos", null, new AjaxOptions
                    {
                        HttpMethod = "POST",
