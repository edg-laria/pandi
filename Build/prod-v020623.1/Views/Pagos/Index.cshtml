                                        @Html.Label("Cotizacion", new { @class = "control-label form-control-sm", @id = "Cotizacion" })
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(p => p.cotizacion_, new { @class = "form-control form-control-sm" })
                                    </div>

                                    @*<div class="col-md-3 "> @Html.Label("Tarjeta", new { @class = "control-label form-control-sm" }) </div>*@
                                    <div class="col-md-3">@Html.DropDownList("idTarjetaSelec_", Model.ListaTarjetas_, null, new { @class = "form-control form-control-sm" }) </div>
                                    <div class="col-md-3">@Html.TextBoxFor(p => p.montoTarjetaSelec_, new { @class = "form-control form-control-sm", @onkeyup = "SumarTotalPago()" })</div>




                                </div>
                                <div class="row  m-t-5">
                                    <div class="col-md-6"></div>
