<div class="row">
    <div class="col-xlg-12 col-lg-12 col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Lista de Usuarios </h5>
                <h6 class="card-subtitle"> </h6>
                <a href="@Url.Action("AddOrEdit", "Usuario")" class="btn btn-sm btn-secondary ">Nuevo Usuario</a>
                <div class="table-responsive m-t-40">

                    <table id="example23" class="table stylish-table">

                        <thead>
                            <tr>
                                <th>Acciones</th>

                                <th>
                                    Usuario
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Rol
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@("table-" + item.idPersona)">

                                    <td style="width:50px;">
                                        @*<a href="@Url.Action("Details", "Usuario",new { id = item.idUsuario })" data-toggle="tooltip" data-original-title="Detalles" class="btn waves-effect waves-light btn-rounded btn-xs btn-dark"><i class="fa  fa-file text-info"></i></a>*@
                                        <a href="@Url.Action("AddOrEdit", "Usuario",new { id = item.idUsuario })" data-toggle="tooltip" data-original-title="Editar" class="btn waves-effect waves-light btn-rounded btn-xs btn-dark"><i class="fa fa-pencil text-success"></i>  Editar</a>
                                        @*<a href="@Url.Action("Delete", "Usuario" ,new { id = item.idUsuario })" data-toggle="tooltip" data-original-title="Eliminar " class="btn waves-effect waves-light btn-rounded btn-xs btn-dark"> <i class="fa fa-close text-danger"></i></a>*@
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.userName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Persona.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Persona.nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rol.descripcion)
                                    </td>


                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- ============================================================== -->
<!-- End PAge Content -->
<!-- ============================================================== -->



