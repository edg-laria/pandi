<div class="col-xlg-12 col-lg-12 col-md-12">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <h4 class="card-title">Roles de Sistemas </h4>
                        <h6 class="card-subtitle"> Permite agrupar funciones del sistema para asignar a un grupo de usuario </h6>
                    </div>
                    <div class="col-md-2 pull-right">
                        <button type="button" class="btn btn-secondary btn-sm " data-toggle="modal" data-target="#add-rol">
                            <i class="ti-menu"></i> Agregar Rol
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                     
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="tblMenusidebar" class="table stylish-table">
                        <thead>
                            <tr>
                                <th>
                                    Rol
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Roles.Count() > 0)
                            {
                                foreach (var item in Model.Roles)
                                {
                                    <tr>
                                        <td> @Html.DisplayFor(modelItem => item.descripcion) </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Rol",new { id = item.idRol })" class="btn btn-primary font-10" data-toggle="tooltip" data-original-title="Detalles">más </a>
                                        </td>
                                    </tr>
                                }
                            }else{
                                <tr>
                                    <td>
                                        No se encontraron registros...
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!--.modal- -->
                <div id="add-rol" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myModalLabel">Nuevo Rol de Sistema </h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="floating-labels m-t-30">
                                    <div class="form-group m-b-40">
                                        @Html.EditorFor(model => model.Rol.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                        <span class="bar"></span>
                                        <label for="accion_nombre">Nombre de Rol</label>
                                    </div>
                                    @*<div class="form-group m-b-30">
                                        @Html.EditorFor(model => model.Rol.idHome, new { htmlAttributes = new { @class = "form-control" } })
                                        <span class="bar"></span>
                                        <label for="acccion_controlador">Nombre del Controlador </label>
                                        <span class="help-block"><small>EJ.: Evento para EventoController </small></span>
                                    </div>*@
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Guardar" formaction="@Url.Action("Create", "Rol")" class="btn btn-primary" />
                                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.modal- -->
            </div>
        </div>
       
    }

</div>





