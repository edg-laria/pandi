            $('#myModalEliminar').on('show.bs.modal', function (e) {
                var id = $(e.relatedTarget).data().id;
                $(e.currentTarget).find('#Id').val(id);
            });
        });


        jQuery(function ($) {
            $('#myModalBloquear').on('show.bs.modal', function (e) {
                var id = $(e.relatedTarget).data().id;
                $(e.currentTarget).find('#Id').val(id);
            });
        });

        jQuery(function ($) {
            $('#myModalActivar').on('show.bs.modal', function (e) {
                var id = $(e.relatedTarget).data().id;
                $(e.currentTarget).find('#Id').val(id);
            });
        });


    </script>
}
