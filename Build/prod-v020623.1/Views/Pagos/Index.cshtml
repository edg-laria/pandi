<div class="modal fade" id="ModalModoPago" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Seleccione el modo de pago</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">×</button>
            </div>

            <div class="modal-body">

                <div class="row" id="tituloFactura">
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8 text-left">
                            <h5> Número se factura: <label id="nroFacturaModal" class="form-control-label font-weight-bold"></label></h5>
                            <h5> Saldo de factura: <label id="lblMonto" class="form-control-label font-weight-bold"></label></h5>

                            <h5> Moneda: <label class="form-control-label font-weight-bold">  @Html.DropDownList("idTipoMonedaSelec_2", Model.ListaTipoMonedas_, null, new { @class = "form-control form-control-sm", @onchange = "callChangefunc()" })  </label></h5>

                            <h5> Cotizacion: <input style="width:100px" onchange="callChangefunc()" type="number" id="lblCotizacion" class="form-control-label font-weight-bold" decimalplace="2" /></h5>
                            <br />
                            <h5> Calculado: <label id="lblCalculado" class="form-control-label font-weight-bold"></label></h5>
                            <script>
                                function callChangefunc() {

                                    var MonedaFactura = document.getElementById("idTipoMonedaSelec_").value;
                                    var MonedaSeleccionada = document.getElementById("idTipoMonedaSelec_2").value;

                                    if (MonedaFactura === MonedaSeleccionada) {

                                        document.getElementById("lblCalculado").innerHTML = document.getElementById("lblMonto").innerHTML;

                                    }
                                    else if (MonedaFactura === "2" && MonedaSeleccionada === "1") {

                                        var TMonto = Number(document.getElementById("lblMonto").innerHTML) * Number(document.getElementById("lblCotizacion").value);

                                        document.getElementById("lblCalculado").innerHTML = TMonto.toFixed(2)
                                    }
                                    else if (MonedaFactura === "1" && MonedaSeleccionada === "2") {

                                        var TMonto = Number(document.getElementById("lblMonto").innerHTML) / Number(document.getElementById("lblCotizacion").value);
                                        document.getElementById("lblCalculado").innerHTML = TMonto.toFixed(2)
                                    }

                                    document.getElementById("txtMonto").value = document.getElementById("lblCalculado").innerHTML;

                                    document.getElementById("CotizacionActual").value = document.getElementById("lblCotizacion").value;

                                }


                                callChangefunc();

                            </script>


                        </div>
                        <div class="col-md-2"></div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-md-2"></div>
                        <div class="col-md-8 text-left">
                            <div class="row">
                                <div class="col-md-4">
                                    Saldo parcial:
                                </div>
                                <div class="col-md-4">
                                    <input type="number" id="txtMonto" class="form form-control-sml" value="" />
                                </div>
                            </div>

                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </div>

                <div class="row" id="tituloPago" style="display:none">
                    <div class="col-md-2"></div>
                    <div class="col-md-8 text-left">
                        <h5> Número de Pago: <label id="nroPagoModal" class="form-control-label font-weight-bold"></label></h5>
                        <h5> Saldo a favorable: <label id="lblMontoPago" class="form-control-label font-weight-bold"></label></h5>
                    </div>
                    <div class="col-md-2"></div>
                </div>

                @Html.Hidden("tipoComprobante")

            </div>
            <div class="modal-footer">
