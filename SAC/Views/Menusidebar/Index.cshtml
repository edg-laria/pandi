<div class="col-xlg-12 col-lg-12 col-md-12">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input id="JsonMenuSiderPorRol"
               name="JsonMenuSiderPorRol"
               type="hidden"
               value="@ViewBag.JsonMenuSiderPorRol" />
        <input id="JsonMenuSider"
               name="JsonMenuSider"
               type="hidden"
               value="@ViewBag.JsonMenuSider" />

        <div class="card ">
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-xlg-12 col-lg-12 col-md-12">

                            <div class="row">
                                <div class="col-xlg-10 col-lg-10 col-md-10">
                                    <h4 class="card-title">Gestion de Menú Inicio </h4>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <h6 class="card-subtitle">
                                        Se configuran las opciones del Menú Principal,
                                        puede agregar ó eliminar los items
                                    </h6>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-xlg-12 col-lg-12 col-md-12">
                                    <button type="button" class="btn btn-secondary btn-sm " data-toggle="modal" data-target="#add-menu">
                                        <i class="fa fa-plus"></i> Agregar Menú
                                    </button>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-xlg-6 col-lg-6 col-md-6 col-md-offset-6">
                                    <div id="treeview-selectable" class=""></div>
                                </div>

                            </div>


                            <!--.modal- -->
                            <div id="add-menu" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="myModalLabel">Nueva Opción de Menú </h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="floating-labels m-t-30">

                                                <div class="form-group m-b-40">
                                                    @Html.EditorFor(model => model.menuSideBar.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                                                    <span class="bar"></span>
                                                    <label for="inputTitulo">Titulo</label>
                                                </div>
                                                <div class="form-group m-b-30">
                                                    @Html.EditorFor(model => model.menuSideBar.Icono, new { htmlAttributes = new { @class = "form-control" } })
                                                    <span class="bar"></span>
                                                    <label for="inputIcono">Icono</label>
                                                    <span class="help-block"><small><a href="https://fontawesome.com/v4.7.0/icons/" target="_blank"> Ref. Iconos</a>  </small></span>
                                                </div>

                                                <div class="form-group m-b-30">
                                                    @Html.DropDownListFor(model => model.menuSideBar.IdParent,
                                                  (IEnumerable<SelectListItem>)(new SelectList(Model.IEmenuSideBar.Select(x => new { Value = x.IdMenuSidebar, Text = x.Titulo }),
                                                                 "Value",
                                                                 "Text"))
                                                  , "Seleccionar Menu Superior...", new { @class = "form-control" })
                                                </div>
                                                <div class="form-group m-b-30">

                                                    @Html.DropDownListFor(model => model.menuSideBar.IdAccion,
                                                 (IEnumerable<SelectListItem>)(new SelectList(Model.ICaccion.Select(x => new { Value = x.IdAccion, Text = x.Descripcion }),
                                                                "Value",
                                                                "Text"))
                                                 , "Seleccionar Accion...", new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="submit" value="Guardar" formaction="@Url.Action("Create", "MenuSidebar")" class="btn btn-primary" />
                                            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- /.modal- -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>





